@model Application.HumanResources.Commands.UpdateHumanResource.UpdateHumanResourceCommand

@{
    ViewBag.Title = "Edit Human Resource";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Human Resource</h2>
<hr />
@using (Html.BeginForm("Update", "HumanResource", FormMethod.Post, new { role = "form" }))
